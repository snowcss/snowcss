{
  "name": "@snowcss/internal",
  "version": "0.1.0",
  "description": "Snow CSS internal machinery",
  "author": "Vladislav Mamon <hello@nrsk.dev>",
  "maintainers": [
    "Vladislav Mamon <hello@nrsk.dev>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcss/snowcss.git",
    "directory": "packages/internal"
  },
  "keywords": [
    "design systems",
    "design tokens",
    "typescript",
    "css"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      },
      "./package.json": "./package.json"
    }
  },
  "imports": {
    "#*": [
      "./src/*",
      "./src/*.ts",
      "./src/*/index.ts"
    ]
  },
  "exports": "./src/index.ts",
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/deepmerge": "^3.1.0",
    "css-tree": "^3.1.0",
    "culori": "^4.0.2",
    "jiti": "^2.6.1",
    "type-fest": "^5.3.1"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/css-tree": "^2.3.11",
    "@types/culori": "4.0.1",
    "tsdown": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
