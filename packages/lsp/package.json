{
  "name": "@snowcss/lsp",
  "version": "0.1.0",
  "description": "Snow CSS LSP server",
  "author": "Vladislav Mamon <hello@nrsk.dev>",
  "maintainers": [
    "Vladislav Mamon <hello@nrsk.dev>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcss/snowcss.git",
    "directory": "packages/lsp"
  },
  "keywords": [
    "design systems",
    "design tokens",
    "typescript",
    "css",
    "lsp"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "exports": {}
  },
  "imports": {
    "#*": [
      "./src/*",
      "./src/*.ts",
      "./src/*/index.ts"
    ]
  },
  "exports": "./src/index.ts",
  "bin": {
    "snowcss-lsp": "./dist/index.mjs"
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@snowcss/internal": "workspace:",
    "jiti": "catalog:",
    "vscode-languageserver": "10.0.0-next.16",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
