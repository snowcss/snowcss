{
  "name": "@snowcss/vite",
  "version": "1.0.0",
  "description": "Snow CSS vite plugin",
  "author": "Vladislav Mamon <hello@nrsk.dev>",
  "maintainers": [
    "Vladislav Mamon <hello@nrsk.dev>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcss/snowcss.git",
    "directory": "packages/vite"
  },
  "keywords": [
    "design systems",
    "design tokens",
    "typescript",
    "css",
    "vite"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "snowcss": "./src/index.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "snowcss": "./src/index.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@snowcss/core": "workspace:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "rollup": "catalog:",
    "tsdown": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  }
}
