{
  "name": "@snowcss/core",
  "version": "1.0.0",
  "description": "Snow CSS core package",
  "author": "Vladislav Mamon <hello@nrsk.dev>",
  "maintainers": [
    "Vladislav Mamon <hello@nrsk.dev>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcss/snowcss.git",
    "directory": "packages/core"
  },
  "keywords": [
    "design systems",
    "design tokens",
    "typescript",
    "css"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "exports": {
    ".": {
      "import": {
        "snowcss": "./src/index.ts",
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "snowcss": "./src/index.ts",
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/deepmerge": "3.1.0",
    "culori": "4.0.2",
    "jiti": "catalog:",
    "css-tree": "^3.1.0",
    "type-fest": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/css-tree": "^2.3.11",
    "@types/culori": "4.0.1",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
