{
  "name": "snowcss",
  "version": "0.2.0",
  "description": "A toolchain for building consistent, shareable, typesafe, and flexible design token systems.",
  "author": "Vladislav Mamon <hello@nrsk.dev>",
  "maintainers": [
    "Vladislav Mamon <hello@nrsk.dev>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcss/snowcss.git",
    "directory": "packages/snowcss"
  },
  "keywords": [
    "design systems",
    "design tokens",
    "typescript",
    "css"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      },
      "./client": {
        "import": {
          "types": "./dist/client.d.mts",
          "default": "./dist/client.mjs"
        },
        "require": {
          "types": "./dist/client.d.cts",
          "default": "./dist/client.cjs"
        }
      },
      "./package.json": "./package.json"
    }
  },
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@snowcss/internal": "workspace:",
    "@snowcss/vite": "workspace:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
